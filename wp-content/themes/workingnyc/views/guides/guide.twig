{# @Type   Component #}
{# @For    Post Type #}
{# @Class  timber-posts/Guides.php #}
<a href="{{ post.link }}" class="c-card__header-link mb-2 desktop:mb-3">
<article class="p-4">
  <header class="items-center">
    {% if post.icon %}
    <svg class="c-card__icon fill-none" role="img">
      <title>{{ post.icon.name }}</title>
      <use href="#program-card-{{ post.icon.slug }}"></use>
    </svg>
    {% endif %}
  </header>

  <div class="pt-3">
        <h5>
            {{ post.title }}
        </h5>

    <div>
      {{ post.preview|wpautop }}
    </div>
  </div>
  <p class="font-[600]"><a href="{{ post.link }}">Apply Here</a></p>
</article>
</a>