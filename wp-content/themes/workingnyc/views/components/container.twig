<section>
    {% if this.fields.container_image_side == 'left' %}
    <div class="desktop:grid desktop:grid-cols-[1fr_1.75fr] items-center desktop-gap-x-72">
    {% else %}
    <div class="desktop:grid desktop:grid-cols-[1.75fr_1fr] items-center desktop-gap-x-72">
    {% endif %}
    {# Desktop: image on the left if container_image_side is 'left', tablet and mobile: image on top #}
    {% if this.fields.container_image_side == 'left' %}
      <div class="pb-3 tablet:pb-5 desktop:pb-0 h-[300px] tablet:h-[400px] w-full desktop:w-[500px]">
    {% else %}
      <div class="desktop:hidden pb-5 h-[300px] tablet:h-[400px] w-full">
    {% endif %}
        <img class="tablet:block object-cover w-full h-full" src="{{ this.fields.container_image.url }}" alt="{{ this.fields.container_image.alt }}"/>
      </div>
      <div class="desktop-max-h-304 desktop-w-660">
        <h2 class="text-[30px] tablet:text-[40px] desktop:text-[44px] mb-3 tablet:mb-4">{{ this.heading }}</h2>
        {{ this.description }}

        {% set container_button_class = '' %}
        {% if this.fields.container_button_type == 'primary' %}
          {% set container_button_class = 'btn-primary' %}
        {% elseif this.fields.container_button_type == 'secondary' %}
          {% set container_button_class = 'btn-secondary' %}
        {% elseif this.fields.container_button_type == 'tertiary' %}
          {% set container_button_class = 'btn-tertiary' %}
        {% else %}
          {% set container_button_class = 'btn-styled' %}
        {% endif %}

        {% if this.fields.container_target == 1 %}
          {% set container_target_external_site = '_blank' %}
        {% endif %}

        <a class="mt-2 btn {{ container_button_class }} pointer-events-auto" target="{{ container_target_external_site }}" href="{{ function('convert_link_locale', this.fields.container_button_link, site.site_url, site.url) }}">{{ this.fields.container_button_text }}</a>
        {% if this.fields.featured_posts_archive_link %}
          <div class="pt-2">
            <a class="h-5 flex flex-col justify-center w-fit decoration-[#0C264D]" href="{{ this.fields.featured_posts_archive_link }}" {% if this.fields.featured_posts_archive_is_external == 1 %} target="_blank" {% endif %} rel="noopener">
              <div class="font-600 text-[#0C264D] text-[16px]">
                {{ this.fields.featured_posts_archive_label }}
              </div>
            </a>
          </div>
        {% endif %}
      </div>
    {% if this.fields.container_image_side == 'right' %}
      <div class="h-[300px] tablet:h-[400px] w-full desktop:w-[500px] hidden desktop:block">
        <img class="tablet:block object-cover w-full h-full" src="{{ this.fields.container_image.url }}" alt="{{ this.fields.container_image.alt }}"/>
      </div>
    {% endif %}
    </div>
</section>