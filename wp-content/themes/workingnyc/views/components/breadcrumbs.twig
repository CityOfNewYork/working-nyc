{# @Type   Element #}
{# @For    Generic Templates #}
<nav class="breadcrumbs flex" aria-label="Breadcrumb">
  <a
  {% if employer == true %}
    {% if options.employers_link is defined %}
      href="{{ options.employers_link }}"
    {% else %}
      href="{{ site.url }}"
    {% endif %}
  {% else %}
    {% if options.job_seekers_link is defined %}
      href="{{ options.job_seekers_link }}"
    {% else %}
      href="{{ site.url }}"
    {% endif %}
  {% endif %}
  >{{ __('Home', 'WNYC') }}</a>

  {% if crumbs %}
  {% for crumb in crumbs %}
  <div>
    <svg aria-hidden="true" class="o-header__breadcrumbs-chevron icon-ui rtl:flip">
      <use href="#lucide-chevron-right"></use>
    </svg>

    {% if crumb.link != '' %}
    <a href="{{ crumb.link }}">{{ crumb.label }}</a>
    {% else %}
    <b aria-current="page">{{ crumb.label }}</b>
    {% endif %}
  </div>
  {% endfor %}
  {% endif %}
</nav>