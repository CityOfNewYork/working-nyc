{% extends "base.twig" %}

{% block content %}
<div class="bg-scale-2">
  <main class="bg-[#E9F4FD]" id="content">
   {# Header Section #}
    <div>
      <header class="site-max-width py-5 tablet:py-6 desktop:py-7">
      <div>
        {% include ['components/utility-nav.twig'] with {
          return: {
            'label': __('Home', 'WNYC'),
            'link': site.url
          },
          web_share: {
            'title': post.title,
            'text': (post.web_share_text) ? post.web_share_text,
            'url': fn('wp_get_shortlink')
          }
        } %}
      </div>
        <div class="w-full">
          <div>
            <h1 id="page-heading" class="text-[40px] tablet:text-[50px] desktop:text-[55px] font-[600]">
              {% if function('is_404') %}{{ __('Page Not Found', 'WNYC') }}{% else %}{{ post.title }}{% endif %}
            </h1>
          </div>

          {% if post.content %}{{ post.content }}{% endif %}
        </div>
      </header>
    </div>

    {% if sections %}
    <div class="bg-scale-0">
      <div class="site-max-width pb-8 mb-8">
        <div class="py-2">
          {% for section in sections %}
          <section {% if not loop.last %}class="pb-6"{% endif %} {% if section.section_title %}id="{{ section.section_title|trim|replace({' ': '-'})|lower }}"{% endif %}>
            {% if section.section_title %}
            <div class="bg-scale-0 sticky top-0 z-10 pt-5">
              <div class="wrap">
                <h3 class="h5 mb-3 text-alt border-b border-scale-4 py-3">
                  {{ section.section_title }}
                </h3>
              </div>
            </div>
            {% endif %}

            <div class="wrap">
              {{ section.section_content }}
            </div>
          </section>
          {% endfor %}
        </div>
      </div>
    </div>
    {% endif %}
  </main>
</div>
{% endblock %}

