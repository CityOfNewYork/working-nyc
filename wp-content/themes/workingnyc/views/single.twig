{% extends "base.twig" %}

{% block content %}
<div class="bg-scale-2">
  <main class="bg-scale-1" id="content">
    <div class="site-max-width sticky top-0 bg-scale-1 z-10">
      {% if employer == true %}
        {% if options.employers_link is defined %}
          {% set home_link = options.employers_link %}
        {% else %}
          {% set home_link = site.url %}
        {% endif %}
      {% else %}
        {% if options.job_seekers_link is defined %}
          {% set home_link = options.job_seekers_link %}
        {% else %}
          {% set home_link = site.url %}
        {% endif %}
      {% endif %}
      {% include ['components/utility-nav.twig'] with {
        web_share: {
          'title': post.title,
          'text': (post.web_share_text) ? post.web_share_text,
          'url': fn('wp_get_shortlink')
        }
      } %}
    </div>

    {# Header Section #}
    <div class="site-max-width">
      <header class="o-header px-0">
        <div>
          {% include 'components/breadcrumbs.twig' with
            {
              crumbs: [
                {
                  'label': post.title,
                  'link': ''
                }
              ]
            }
          %}

          <h1 id="page-heading" class="o-header__title">{% if function('is_404') %}{{ __('Page Not Found', 'WNYC') }}{% else %}{{ post.title }}{% endif %}</h1>
        </div>
      </header>
    </div>

    {% if sitemap %}
    <section class="bg-scale-2 clearfix">
      <div class="site-max-width pt-utility-anchor pb-8 mb-8">
        <div class="py-4 wrap">
         {% include 'sitemap.twig'%}
        </div>
      </div>
    </section>
    {% elseif post.content %}
    <section class="bg-scale-2 clearfix">
      <div class="site-max-width pt-utility-anchor pb-8 mb-8">
        <div class="py-4 wrap">
          {{ post.content }}
        </div>
      </div>
    </section>{% endif %}

    {% if show_newsletter is not defined %}
    {% include 'objects/newsletter.twig' %}
    {% endif %}
  </main>
</div>
{% endblock %}