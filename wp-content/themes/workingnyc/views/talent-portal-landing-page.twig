{% extends "base.twig" %}

{% block content %}
<div>

<div class="layout-content text-center my-5">
    <h1>{{ post.post_title }}</h1>

    {{ post.post_content }}
</div>

{% if post.thumbnail %}
    <div>
        <img loading="lazy" src="{{ post.thumbnail.src('desktop') }}" alt="{{ post.thumbnail.alt }}"/>
    </div>
{% endif %}

<div class="grid grid-cols-2 layout-content text-center my-5">
<div>
    <h3>{{ post.meta('subtitle_1') }}</h3>
    <p>{{ post.meta('description_1') }}</p>
    <a class="mt-2 btn btn-small tablet:btn btn-primary pointer-events-auto" href="{{ post.meta('button_link_1') }}">{{ post.meta('button_label_1') }}</a>
</div>
<div>
    <h3>{{ post.meta('subtitle_2') }}</h3>
    <p>{{ post.meta('description_2') }}</p>
    <a class="mt-2 btn btn-small tablet:btn btn-primary pointer-events-auto" href="{{ post.meta('button_link_2') }}">{{ post.meta('button_label_2') }}</a>
</div>
</div>

</div>
{% endblock %}
