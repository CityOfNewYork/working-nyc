<footer aria-label="{{ __('Footer', 'WNYC') }}" class="o-footer relative z-10 pb-3 bg-scale-1 tablet:bg-scale-2" role="contentinfo">
  <div class="page-max">
    <div class="o-attribution">
      <nav aria-label="{{ footer_menu.name }}" class="nav-block tablet:nav-inline tablet:flex items-center">
        <a class="uppercase text-small no-underline tablet:inline-flex tablet:p-0" href="{{ fn('get_home_url') }}">
          <span class="sr-only">Working N Y C</span>

          <svg aria-hidden="true" class="icon-logo-standard-menu-item fill-text text-brand">
            <use href="#logo-wnyc-standard"></use>
          </svg>
        </a>

        {% for m in footer_menu.get_items %}
        <a class="o-footer__item" href="{{ m.link }}"
          {% if m.attr_title %}title="{{ m.attr_title }}"{% else %}title="{{ m.title }}"{% endif %}
          {% if m.target %}target="{{ m.target }}"{% endif %}
          {% if m.xfn %}rel="{{ m.xfn }}"{% endif %}>
            {{ m.title }}
        </a>
        {% endfor %}
      </nav>

      <div class="o-attribution__flex o-footer__divider">
        <div>
          <p class="o-attribution__byline">
            {{ __('Working NYC is maintained by the <span class="sr-only">The Mayor\'s Office for Economic Opportunity and The Mayor\'s Office of Workforce Development</span>', 'WNYC') }}
          </p>

          <svg style="max-width: 100%" width="573" height="65" viewBox="0 0 1509 171" class="fill-text" role="img">
            <title>{{ __('Logo for The New York City Mayor\'s Office for Economic Opportunity and Mayor\'s Office of Talent and Workforce Development', 'WNYC') }}</title>
            <use href="#logo-partnership-workdev-opportunity"></use>
          </svg>
        </div>
      </div>

