<footer aria-label="{{ __('Footer', 'WNYC') }}" class="bg-[#F8F9FB] relative py-3 px-2 tablet:py-5 tablet:px-8" role="contentinfo">
    <nav class="o-attribution__flex border-b border-slate-200 pb-3 desktop:pb-3">
        <div class="tablet:float-left desktop:float-left pb-3 tablet:pb-0 desktop:pb-0">
            <svg aria-hidden="true" class="o-navigation__svg fill-text text-brand pb-1" width="97" height="32">
                <use href="#logo-nyc-black"></use>
            </svg>
            </br>
            <span>{{ __('Connecting you to NYC services.', 'WNYC') }}</span>
        </div>
        <div class="tablet:float-right desktop:float-right inline-grid grid-cols-2 gap-1">
        {% for m in global_footer_menu.get_items %}
            <a class="inline mr-2 desktop:mr-3 tablet:mr-3" href="{{ m.link }}"
            {% if m.attr_title %}title="{{ m.attr_title }}"{% endif %}
            {% if m.target %}target="{{ m.target }}"{% endif %}
            {% if m.xfn %}rel="{{ m.xfn }}"{% endif %}>
                {{ m.title }}
            </a>
        {% endfor %}
        </div>
    </nav>
    <nav class="o-attribution__flex border-grey-light pt-3 desktop:pt-3">
        <div>
        <span class="text-sm">
            {{ __('Â© ' ~ 'now' | date('Y') ~ ' City of New York,', 'WNYC') ~ ' ' ~ __('All Rights Reserved.', 'WNYC') }}
            {{ __('NYC is a trademark and service mark of the City of New York.', 'WNYC') }}</span>
        </div>
    </nav>
</footer>